@model My3Common.Event

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/EventDetailsForm.css">
    <title>Delete Event</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Are you sure you want to delete this Event?</h3>
            <hr />
            <br />
            <div>

                @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>

                
                @Html.LabelFor(model => model.Category, "Category", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>


                @Html.LabelFor(model => model.Place, "Place", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>


                @Html.LabelFor(model => model.Date, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>



                <div class="form-group">
                    <b> @Html.LabelFor(model => model.Description, "Description", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <br />

                    <div class="col-md-10">
                        <br />
                        <div class="label nav-justified" capture="Description">@Model.Description</div>
                    </div>
                    <br />

                </div>


                <div class="form-actions no-color">
                    @{if (Model.Date < @DateTime.Now)
                        {
                            <h3>Warning!You can't delete the past event!</h3>
                            <br />
                        }
                        else
                        {
                            <input type="submit" value="Delete" onclick="location.href='@Url.Action("Delete", "Account", new { id = Model.ID })'" class="btn btn-default" />}
                    }
                    <input type="button" value="Back to List" onclick="location.href='@Url.Action("Events","Account",new { id = @ViewBag.UserID })'" class="btn btn-info" />
                </div>
            </div>
        </div>
                        }


</body>
</html>
