@model IEnumerable<My3Common.User>

@{
    Layout = "~/Views/Shared/_LayoutForTableAdmin.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
</head>
<body>
    <p>
        <input type="button" value="Create New User" onclick="location.href='@Url.Action("Create","User")'" class="btn btn-default" />
   </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in @ViewBag.users) {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.AddedDate
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                @item.Role
            </td>
            <td>
                @item.Login
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "User",new { id=item.ID },null) |
                @Html.ActionLink("Details", "Details", "User", new { id=item.ID },null) |
                @Html.ActionLink("Delete", "Delete", "User", new { id=item.ID },null)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
