@model My3Common.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/UserDetailsForm.css">
    <title>Delete User</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Are you sure you want to delete this User?</h3>
            <hr />
            <br />
            <div>

                @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>


                @Html.LabelFor(model => model.Role, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>

                @Html.LabelFor(model => model.Login, "Login", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>

                @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>



                @Html.LabelFor(model => model.PhoneNumber, "Phone Number", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>


                @Html.LabelFor(model => model.AddedDate, "Added Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AddedDate, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>






                <div class="form-actions no-color">
                    <input type="submit" value="Delete" onclick="location.href='@Url.Action("Delete","User",new { id = Model.ID })'" class="btn btn-default" />
                    <input type="button" value="Back to List" onclick="location.href='@Url.Action("Users","Admin")'" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</body>
</html>
