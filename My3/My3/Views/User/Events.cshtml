@model IEnumerable<My3Common.Event>

@{
    Layout = "~/Views/Shared/_LayoutForTableAdmin.cshtml"; ;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Events of User</title>
</head>
<body>
    
    <input type="button" value="Back to List of Users" onclick="location.href='@Url.Action("Users","Admin")'" class="btn btn-info" />
    <h4> Events of user _<strong>@ViewBag.UserName</strong>_</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>


                <td>
                    @{if (item.Date > DateTime.Now)
                        {
                            @Html.ActionLink("Edit", "UserEditEvent", "User", new { id = item.ID }, null)
                            <p>@Html.ActionLink("Delete", "DeleteUserDeleteEvent", "User", new { id = item.ID }, null)</p>
                        }
                    }
                    @*@Html.ActionLink("Details", "Details", "Event", new { id = item.ID }, null)*@
                        </td>
            </tr>
        }

    </table>
</body>
</html>
